<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<org.thunderdog.challegram.widget.ImageReceiverView
		android:id="@+id/reaction"
		android:layout_width="25dp"
		android:layout_height="25dp"
		android:layout_marginTop="30dp"
		android:layout_centerHorizontal="true"/>

	<View
		android:id="@+id/reaction_animation"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_marginTop="17.5dp"
		android:layout_centerHorizontal="true"/>

	<org.thunderdog.challegram.reactions.SimplestCheckboxView
		android:id="@+id/checkbox"
		android:layout_width="14dp"
		android:layout_height="14dp"
		android:layout_alignBottom="@id/reaction"
		android:layout_alignRight="@id/reaction"
		android:layout_marginBottom="-5dp"
		android:layout_marginRight="-5dp"/>

	<TextView
		android:id="@+id/text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/reaction"
		android:layout_marginTop="12dp"
		android:lines="2"
		android:maxLines="2"
		android:ellipsize="end"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:textSize="11dp"
		android:gravity="center_horizontal|top"/>

</RelativeLayout>